@model IEnumerable<Academico.Models.Instituicao>

@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="container py-5">
<p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.Endereco)</th>
                <th></th>
                <th></th>
                <th></th>            
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nome</td>
                <td>@item.Endereco</td>
                    <td><a class="btn btn-success" asp-area="" asp-controller="Instituicao" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
                    <td><a class="btn btn-primary" asp-area="" asp-controller="Instituicao" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
                    <td><a class="btn btn-danger" asp-area="" asp-controller="Instituicao" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                    @*@Html.ActionLink("Editar", "Edit", new { id=item.Id }) |*@
                    @*@Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |*@
                    @*@Html.ActionLink("Excluir", "Delete", new { id=item.Id })*@
                
            </tr>
                }
        </tbody>
    </table>
    </div>
</body>
</html>
